{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "identity": {
            "type": "String",
            "metadata": {
                "description": "ARM ID of a user managed identity that has contributor access to the resource group being deployed."
            }
        },
        "vaultSubscriptionId": {
            "type": "String",
            "metadata": {
                "description": "Subscription Id of the Recovery Services Vault."
            }
        },
        "vaultName": {
            "type": "String",
            "metadata": {
                "description": "Name of the Recovery Services Vault to be used."
            }
        },
        "vaultResourceGroupName": {
            "type": "String",
            "metadata": {
                "description": "Resource Group Name of the Recovery Services Vault."
            }
        },
        "primaryRegion": {
            "type": "String",
            "metadata": {
                "description": "The region where the original source virtual machines are deployed."
            }
        },
        "recoveryRegion": {
            "type": "String",
            "metadata": {
                "description": "The designated disaster recovery region where virtual machines would be brought up after failover."
            }
        },
        "sourceVmARMIdsCSV": {
            "type": "String",
            "metadata": {
                "description": "ARM IDs of the Source VMs separated by comma."
            }
        },
        "recoveryStagingStorageAccount": {
            "type": "String",
            "metadata": {
                "description": "ARM ID of the storage account to be used to cache replication data in the DR region (for Reprotect operation)."
            }
        },
        "recoveryReplicaDiskAccountType": {
            "defaultValue": "Standard_LRS",
            "allowedValues":[
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "type": "String",
            "metadata": {
                "description": "Type of the Storage account to be used for Disk used for replication."
            }
        },
        "recoveryTargetDiskAccountType": {
            "defaultValue": "Standard_LRS",
            "allowedValues":[
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "type": "String",
            "metadata": {
                "description": "Type of the Storage account to be used for Recovery Target Disk."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2019-10-01-preview",
            "name": "FailoverAndReprotect",
            "location": "[resourceGroup().location]",
            "kind": "AzurePowerShell",
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[parameters('identity')]": {}
                }
            },
            "properties": {
                "forceUpdateTag": "[utcNow()]",
                "azPowerShellVersion": "3.0",
                "timeout": "PT4H",
                "arguments": "[concat('-VaultSubscriptionId', ' ', parameters('VaultSubscriptionId'), ' ', '-VaultResourceGroupName', ' ', parameters('vaultResourceGroupName'), ' ', '-VaultName', ' ', parameters('vaultName'), ' ', '-PrimaryRegion', ' ', replace(string(parameters('primaryRegion')), ' ', ''), ' ', '-RecoveryRegion', ' ', replace(string(parameters('recoveryRegion')), ' ', ''), ' ', '-sourceVmARMIdsCSV', ' \\\"', parameters('sourceVmARMIdsCSV'), '\\\" ', '-RecoveryStagingStorageAccount', ' ', parameters('recoveryStagingStorageAccount'), ' ', '-RecoveryReplicaDiskAccountType', ' ', parameters('recoveryReplicaDiskAccountType'), ' ', '-RecoveryTargetDiskAccountType', ' ', parameters('recoveryTargetDiskAccountType'))]",
                "primaryScriptURI": "https://raw.githubusercontent.com/AsrOneSdk/published-scripts/master/AzureSiteRecovery-Automation-EndToEnd-Templates/Powershell-Scripts/Failover-Reprotect.ps1",
                "cleanupPreference": "Always",
                "retentionInterval": "P1D"
            }
        }
    ]
}